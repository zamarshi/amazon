<h1>Edit Product</h1>

<%= form_for  @product do |f| %>

  <%= @product.errors.full_messages.join(", ")%>
  <div>
    <%=f.label :title %>
    <%=f.text_field :title %>
  </div>
  <div>
    <%=f.label :description %>
    <%=f.text_area :description %>
  </div>
  <div>
    <%=f.label :price %>
    <%=f.text_field :price %>
  </div>
  <%= f.submit %>
<% end %>
